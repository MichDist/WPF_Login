<Window x:Class="WPF_Login.RegisterNewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Login"
        mc:Ignorable="d"
        Title="RegisterNewUser" Height="360" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <Label Name="lblRegister"  Content="Register a new user" HorizontalAlignment="Center" FontSize="18"/>
            <Separator />
            <Label Name="lblUsername" Content="Username" />
            <TextBox Name="tboxUsername" FontSize="16"/>
            <Label Name="lblPassword" Content="Password" />
            <TextBox Name="tboxPassword" FontSize="16"/>
            <Label Name="lblPasswordRepeat" Content="Password repeat" />
            <TextBox Name="tboxPasswordRepeat" FontSize="16"/>
            <Button Name="btnSubmit" Content="Submit" FontSize="16" Width="100" Margin="20" Click="btnSubmit_Click" />
            <Label Name="lblMessage" Content="" HorizontalAlignment="Center" />
        </StackPanel>       
    </Grid>
</Window>
